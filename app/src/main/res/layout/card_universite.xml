<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/universiteler_card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="7dp"
        android:background="#ffffff"
        android:elevation="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:contentPadding="-1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/arkaplan"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bcu" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="155dp"
                android:background="#dd2f4d" />

            <View
                android:id="@+id/line"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_below="@+id/textViewIsim"
                android:layout_alignStart="@+id/textViewIsim"
                android:layout_alignLeft="@+id/textViewIsim"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:alpha="0.4"
                android:background="#000000" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="43dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                app:civ_border_color="#dd2f4d"
                app:civ_border_width="6dp" />

            <TextView
                android:id="@+id/textViewSehir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/logo"
                android:layout_alignLeft="@+id/logo"
                android:layout_alignRight="@+id/logo"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Ağrı"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewIsim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arkaplan"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="29dp"
                android:layout_toEndOf="@+id/logo"
                android:layout_toRightOf="@+id/logo"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Yasir Ameen"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewDetay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_alignStart="@+id/line"
                android:layout_alignLeft="@+id/line"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="3"

                android:paddingRight="15dp"
                android:paddingBottom="4dp"
                android:text="Süleyman Demirel Üniversitesi 1992 yılında Isparta'da eğitim-öğretim, bilim ve araştırmada kaliteden ödün vermeden emin adımlarla geleceğe yürüyerek, bilimsel çalışmalarıyla dünyaya şekil vererek, içinde bulunulan yörenin toplumsal değerlerine saygılı, yereli iyi bilen, ülke sorunlarına duyarlı, bölgesinde lider, bununla birlikte bir Dünya üniversitesi olarak gelişmesini sürdürme vizyonuyla kurulan bir devlet üniversitesidir. SDÜ 82.711 öğrenciye sahip olup modern eğitim olanakları ve güçlü akademik kadrosuyla öğrencilerine kucak açan, öğrencilerinin çeşitli meslek dallarında en iyi eğitimi almalarını amaç edinmiştir."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>